<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/darker_gray"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPurple"
       >


        <ImageView
            android:id="@+id/image"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/athlete"/>

        <TextView
             android:layout_alignParentRight="true"
            android:id="@+id/players_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="ID"
            />

        <TextView
            android:layout_toRightOf="@+id/image"
            android:id="@+id/player_name"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="Name" />

        <TextView
            android:layout_below="@+id/player_name"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="5dp"
            android:id="@+id/player_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="Surname" />

        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/player_surname"
            android:layout_marginLeft="5dp"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="Position"
            />

        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="120dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:id="@+id/team"
            tools:text="Team"
            />
        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/team"
            android:layout_marginLeft="120dp"
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="City"/>
        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/city"
            android:layout_marginLeft="120dp"
            android:id="@+id/conference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="Conference"/>
        <TextView
            android:layout_toRightOf="@+id/image"
            android:layout_below="@+id/conference"
            android:layout_marginLeft="120dp"
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            tools:text="Division"/>
</RelativeLayout>

</androidx.cardview.widget.CardView>